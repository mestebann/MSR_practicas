<?xml version="1.0"?>

<robot name="barrier">

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="post_link">

        <inertial>
            <mass value="100" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                               iyy="1.0" iyz="0.0" 
                                         izz="1.0" />
        </inertial>

        <visual>
            <origin xyz="0 0 0.5" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.15" length="1"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin xyz="0 0 0.5" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1" length="1"/>
            </geometry>
        </collision>

    </link>

    <link name="barrier_link">

        <inertial>
            <origin rpy="0 0 0" xyz="1.5 0 -0.75" />
            <mass value="5.0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0"
                               iyy="0.0" iyz="0.0" 
                                         izz="0.0" />
        </inertial>

        <visual>        
            <origin rpy="0 0 0" xyz="1.5 0 -0.75" />
            <geometry>
                <box size="3.0 0.1 0.1"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="1.5 0 -0.75" />
            <geometry>
             <box size="3.0 0.1 0.1"/>
            </geometry>
        </collision>

    </link>

    <joint name = "barrier_joint" type = "continuous">
        <parent link="post_link" />
        <child link="barrier_link" />
        <origin xyz="0 0 1" rpy="0 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

</robot>